marron = #a79372
marron_claro = #cec6bb
marron_oscuro = #4e4534

html,
body
	background #f0f0f0
	color #333
	font-family Verdana, Arial, Helvetica, sans-serif
	font-size 12px

ul
	margin 0
	padding 0
	list-style none

.left
	float left

.right
	float right

.main
	background white
	position relative
	margin 0 auto
	width 980px
	-webkit-box-shadow #777 0px 2px 25px
	-moz-box-shadow #777 0px 2px 25px
	box-shadow #777 0px 2px 25px
	behavior url(/pie/PIE.htc)

	header
		padding-top 13px

		nav
			background marron
			padding 0 35px
			margin-top 15px
			height 34px
			border-bottom 25px solid marron_claro

			& > ul
				& > li
					float left
					border-left 1px solid white
					position relative
					z-index 999

					&:first-child
						border-left 0

					&:hover
						ul
							display block

						& > a
							background marron_oscuro

					ul
						display none
						position absolute
						width 100%
						z-index 9999

						li
							text-align center

							a
								&:hover
									background marron_oscuro

					a
						color white
						display block
						background marron
						text-decoration none
						padding 10px 20px

						&:hover,
						&:active,
						&:focus,
						&:link
							color white
			
		.logo
			position absolute
			top 0
			right 50px

		.small-menu
			padding-left 40px
			overflow hidden

			ul
				li
					float left
					border-left 1px solid #888
					padding 0 11px

					&:first-child
						border-left 0

					a
						color #888
						text-decoration none

						&:hover,
						&:active,
						&:focus,
						&:link
							color #888

		.el-dorado
			margin-left 50px
			margin-top 15px

			img
				display block

	.content
		overflow hidden

		footer
			border-top 1px solid #CCC
			padding 20px 0
			text-align center
			margin-top 20px

		.description-slider
			background #9f9f9f
			width 766px
			margin 0 auto
			color white
			padding 4px 15px

		.events-home
			margin 0 auto
			overflow hidden
			width 796px
			margin-bottom 14px

			.box *
				cursor pointer

			.box
				border 1px solid #ccc
				padding 10px
				width 348px
				margin 14px 14px 0 14px
				display block
				text-decoration none
				
				.name-event
					border 1px solid #CCC

				.img-event
					padding 10px 10px 0 0

				.description-event
					color black
					font-size 11px
					padding-top 20px
					position relative

					.mag-glass
						background url("/img/home/lupa.jpg")
						bottom -40px
						display block
						height 20px
						position absolute
						right 0
						width 28px

				figure
					img
						display block
		
		.inner-banner
			width 980px

			img
				display block

		.main-content-wrapper
			overflow hidden

			.title
				font-weight normal
				color marron_oscuro
				font-size 15px
				margin 0 0 30px 0
				padding 0 0 10px 0
				border-bottom 1px solid marron_claro

			.expositores
				padding 20px

				.expositores-list
					li
						overflow hidden
						float left
						width 430px
						padding 0 20px
						height 125px

						h4
							color marron
							margin 0
							padding 0

						img
							margin-right 10px
							display block
							max-width 80px
							border 1px solid #888

						p
							margin-left 90px

			.main-content
				width 610px
				padding 20px
				position relative

				.accordion
					.accordion_toggle
						padding 10px
						margin 0
						background marron_claro
						color black
						font-weight normal
						border-bottom 1px solid #E0D9CE
						position relative

						.arrow
							border-left 8px solid marron_claro
							border-top 8px solid #F8D861
							border-right 8px solid marron_claro
							position absolute
							right 10px
							top 15px

						&.ui-state-active
							background marron
							color white

							.arrow
								border-top 8px solid marron
								border-bottom 8px solid marron
								border-left 8px solid #F8D861
								border-right 0
								top 10px
								
					.accordion_content
						padding 10px

						h2
							margin 15px 0 5px 0
							color #0099FF
							font-weight normal
							font-size 21px

				.link-issu
					background marron_oscuro
					display block
					position absolute
					top 15px
					right 20px
					color white
					padding 5px 10px
					text-decoration none

			.sidebar
				width 310px
				background marron_claro
				padding 10px
				height 100%
				padding-bottom 9999px
				margin-bottom -9999px

				img
					width 100%
					display block
		
		.secondary-menu
			background marron_oscuro
			overflow hidden

			ul
				li
					float left
					padding 8px 0

					&:hover,
					&.active
						background marron

					&:first-child
						a
							border-left 0
							padding 5px 12px

					a
						display block
						text-decoration none
						color white
						padding 5px 8px
						border-left 1px solid white

		.slider
			border 2px solid #666
			border-bottom-width 10px
			height 260px
			margin 0 auto
			position relative
			width 792px
			overflow hidden

			.slidesjs-pagination
				z-index 99
				margin-top -35px
				position relative
				text-align center

				li
					text-align center
					display inline-block
					*display inline
					padding 0 10px

					a
						background white
						border 2px solid #666
						color white
						display inline-block
						font-size 1px
						height 10px
						width 10px
						opacity .5
						filter unquote('alpha(opacity=50)')
						zoom 1
						-webkit-border-radius 50%
						-moz-border-radius 50%
						border-radius 50%

						&:hover
							opacity 1
							filter unquote('alpha(opacity=100)')

					a.active
						opacity 1
						filter unquote('alpha(opacity=100)')

			.left
				width 50%

				img
					width 100%
					display block
		
		.large-menu
			.row-items
				background #EAE7DE
				padding 10px 30px
				margin-bottom 50px
				*height 79px

				li
					width 140px
					display inline-block
					*float left
					position relative
					padding 0 20px

					a
						color marron_oscuro
						text-decoration none

						&:hover
							color marron

						img
							width 140px
							display block
							border 1px solid marron
							
						span
							position absolute
							bottom -30px
							width 100%
							left 0
							text-align center
							font-weight bold
							cursor pointer

		.panes
			background #1f1e1e
			width 900px
			margin 30px auto 40px auto
			overflow hidden
			padding 20px

			.large-banner.selected
				display block

			.large-banner
				width 480px
				height 280px
				border 2px solid black
				position relative
				display none
				color white
				overflow hidden

				img
					display block
					width 100%

				.title-image
					background black
					bottom 0
					color white
					display block
					font-size 18px
					font-weight bold
					left 0
					opacity .7
					filter unquote('alpha(opacity=70)')
					padding 8px 15px
					position absolute
					width 450px
					text-decoration none

					&:hover
						text-decoration underline
			
			.nav-banner
				padding 0 10px

				li.selected
					opacity 1
					filter unquote('alpha(opacity=100)')

				li
					margin-top 9px
					opacity .5
					zoom 1
					filter unquote('alpha(opacity=50)')

					&:hover
						opacity 1
						filter unquote('alpha(opacity=100)')
					
					&:first-child
						margin-top 0

					figure
						display block
						cursor pointer

						img
							border 2px solid black
							width 90px
							height 60px
							display block
			
			.description-banner.selected
				display block

			.description-banner
				width 300px
				color #ede9e9
				display none

				h3
					font-weight normal
					font-size 24px
					text-align center
					font-family Georgia
					margin 0

					a
						text-decoration none
						color #d3d3d3

						&:hover
							text-decoration underline

						&:hover,	
						&:active,
						&:focus,
						&:link
							color #d3d3d3

				p
					font-size 13px
					line-height 1.5

					span
						font-size 10px
						display block
						margin-bottom 15px

				.more
					color #797575
					text-decoration none
					font-size 10px
					float right

					&:hover
						text-decoration underline